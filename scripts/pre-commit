#!/bin/bash
# Pre-commit hook to format Go files

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get list of staged Go files
STAGED_GO_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.go$')

if [ -z "$STAGED_GO_FILES" ]; then
    # No Go files staged, exit successfully
    exit 0
fi

echo -e "${YELLOW}Running gofmt on staged Go files...${NC}"

# Track if any files were formatted
FORMATTED=0
FAILED=0

# Format each staged Go file
for FILE in $STAGED_GO_FILES; do
    # Check if file exists (it might have been deleted)
    if [ ! -f "$FILE" ]; then
        continue
    fi
    
    # Run gofmt with simplify flag
    gofmt -s -w "$FILE"
    
    if [ $? -ne 0 ]; then
        echo -e "${RED}✗ Failed to format: $FILE${NC}"
        FAILED=1
    else
        # Check if file was modified by gofmt
        if ! git diff --quiet "$FILE"; then
            echo -e "${GREEN}✓ Formatted: $FILE${NC}"
            # Re-stage the formatted file
            git add "$FILE"
            FORMATTED=1
        fi
    fi
done

if [ $FAILED -eq 1 ]; then
    echo -e "${RED}Some files failed to format. Please fix the errors and try again.${NC}"
    exit 1
fi

if [ $FORMATTED -eq 1 ]; then
    echo -e "${GREEN}✓ Go files formatted and re-staged${NC}"
else
    echo -e "${GREEN}✓ All Go files already properly formatted${NC}"
fi

# Run go vet on staged files (skip on non-Linux systems due to build constraints)
OS=$(uname -s)
if [ "$OS" = "Linux" ]; then
    echo -e "${YELLOW}Running go vet...${NC}"
    go vet ./...
    
    if [ $? -ne 0 ]; then
        echo -e "${RED}✗ go vet found issues. Please fix them before committing.${NC}"
        exit 1
    fi
    
    echo -e "${GREEN}✓ go vet passed${NC}"
else
    echo -e "${YELLOW}Skipping go vet (requires Linux due to build constraints)${NC}"
    echo -e "${YELLOW}Run 'make test-quick' to test in Docker before pushing${NC}"
fi

echo -e "${GREEN}✓ Pre-commit checks passed${NC}"

exit 0
